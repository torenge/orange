<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
  <div class="container">
    <div class="row">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email , class: 'col-sm-2 control-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'col-sm-10' %>
        </div>

        <div class="form-group">
          <%= f.label :password , class: 'col-sm-2 control-label' %>
          <%= f.password_field :password, autocomplete: "current-password" , class: 'col-sm-10' %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン" , class: 'btn btn-primary col-sm-offset-2 col-sm-10' %>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>

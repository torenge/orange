<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<h1>注文詳細画面</h1>

	<div class="field row">
		<label for="full-name">購入者</label>
		<%= @order.user.fullname %>
	</div>

	<div class="field row">
		<label for="order-address">配送先</label>
		<%= @order.postal_code %>
		<%= @order.address %>
		<%= @order.first_name %>
		<%= @order.last_name %>

	</div>

	<div class="field row">
		<label for="pay-method">支払方法</label>
		<%= @order.pay_method %>
	</div>
			<label for="status">注文ステータス</label>
			<%= f.select :status, Order.statuses.keys.map {|k| [k, k]} %>

		</div>

		<div class="field row">
			<label for="pay-method">支払方法</label>
			<%= @order.pay_method %>
		</div>
		<%# order_product index %>
		<table>
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th>製作ステータス</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @order.order_products.each do |order_product| %>
						<td><%= order_product.product.product_name %></td>
						<td><%= number_to_currency(order_product.total.to_i * 1.1, :unit => "", :precision => 0) %></td>
						<td><%= order_product.quantity %></td>
						<td><%= number_to_currency(order_product.total.to_i * 1.1 * order_product.quantity, :unit => "", :precision => 0) %></td>
					<% end %>

					<%= f.fields_for :order_products, @order.order_products do |op_fields| %>
						<td><%= op_fields.select :status, OrderProduct.statuses.keys.map {|k| [k,k]} %></td>
						<%= f.submit "更新" , class: "btn btn-primary" %>

					<% end %>
				</tr>
			</tbody>
		</table>
	<% end %>
</body>
</html>
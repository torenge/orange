<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<h1>注文詳細画面</h1>

	<div class="field row">
		<label for="full-name">購入者</label>
		<%= @user.fullname %>
	</div>

	<div class="field row">
		<label for="deli-address">配送先</label>
		<%= @user.deli_addresses %>
	</div>

	<div class="field row">
		<label for="pay-method">支払方法</label>
		<%= @user.order.pay_method %>
	</div>


	<%= form_for [:admin, @order] do |f| %>
		<div class="field row">
			<label for="status">注文ステータス</label>
			<%= f.select :status, [入金待ち: 1, 入金確認: 2, 製作中: 3, 発送準備中: 4, 発送済み: 5], :selected => 1 %>
		</div>

		<div class="field row">
			<%= f.submit "更新" , class: "btn btn-primary" %>
		</div>
	<% end %>

	<%# order_product index %>
	<table>
		<thead>
			<tr>
				<th>商品名</th>
				<th>単価(税込)</th>
				<th>数量</th>
				<th>小計</th>
				<th>製作ステータス</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= @order.product.product.name %></td>
				<td><%= @order.order_product.total %></td>
				<td><%= @order.order_product.quantity %></td>
				<td><%= select :order_product, :status, [着手不可: 1, 製作待ち: 2, 製作中: 3, 製作完了: 4], :selected => 1 %></td>
			</tr>
		</tbody>
	</table>

</body>
</html>
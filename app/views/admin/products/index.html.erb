<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<h2>商品一覧画面</h2>
					<div class="col-lg-10 col-xs-offset-1">
						<%= link_to new_admin_product_path do %>
							<button type="button" class="btn btn-default btn-circle">
								<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
							</button>
						<% end %>
						<table class="table table-hover">
							<thead>
								<tr class="active">
									<th>商品ID</th>
									<th>商品名</th>
									<th>税抜き価格</th>
									<th>ジャンル</th>
									<th>ステータス</th>
								</tr>
							</thead>
							<tbody>
								<% @products.each do |product| %>
									<tr>
									<td><%= product.id %></td>
									<td><%= link_to product.product_name, admin_product_path(product.id) %></td>
									<td><%= number_to_currency(product.price, :unit => "", :precision => 0) %></td>
									<td><%= product.genre.genre_name %></td>
									<td><%= product.status %></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					<center><%= paginate @products, class: "paginate" %></center>
				</div>
			</div>
		</div>
	</div>
</body>
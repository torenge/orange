<!DOCTYPE html>
<html>
	<head>
		<title>ながのcakeオレンジ</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h2>商品一覧画面</h2>

					<%= link_to new_admin_product_path do %>
						<button type="button" class="btn btn-default btn-circle"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
					<% end %>

					<table class="table table-hover">
						<thead>
							<tr>
								<th>商品ID</th>
								<th>商品名</th>
								<th>税抜き価格</th>
								<th>ジャンル</th>
							</tr>
						</thead>
						<tbody>
							<% @products.each do |product| %>
							<tr>
								<td><%= product.id %></td>
								<td><%= link_to product.product_name, admin_product_path(product.id) %></td>
								<td><%= product.price %></td>
								<td><%= product.status %></td>
							</tr>
							<% end %>
							<%= paginate @products, class: "paginate" %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</body>
</html>
	
<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div class="container">
		<div class="row">
			<h1>商品 編集画面</h1>

			
				<%= form_for [:admin, @product] do |f| %>
					<div class="col-md-4">
						<%= attachment_image_tag @product, :product_image, :fill, 200, 200, format: 'jpeg' %>
						<%= f.attachment_field :product_image %>
					</div>

					<div class="col-md-6">
						<div class="field row">
							<%= f.label "商品名" %>
							<%= f.text_field :product_name %>
						</div>

						<div class="field row">
							<%= f.label "商品説明" %>
							<%= f.text_area :introduction %>
						</div>

						<div class="field row">
								<%= f.label "ジャンル" %>
								<%= f.collection_select(:genre_id, Genre.where(genre_status: "有効"), :id, :genre_name, :prompt => '--選択してください--') %>
						</div>

						<div class="field row">
							<%= f.label "税抜価格" %>
							<%= f.text_field :price %>
							<%= f.label "円" %>
						</div>

						<div class="field row">
							<%= f.label "販売ステータス" %>
							<%= f.select :status, ['販売中', '売切れ'], {prompt: '--選択してください--'} %>
						</div>

						<%= f.submit "変更を保存" , class: 'btn btn-primary' %>
					</div>
				<% end %>
		</div>
	</div>
</body>
</html>




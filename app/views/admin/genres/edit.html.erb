<!DOCTYPE html>
<html>
	<head>
		<title>ながのcakeオレンジ</title>
	</head>
	<body>
		<div class="container">
			<div class="row genre-edit">
				<h1>ジャンル編集画面</h1>

				<div class="col-sm-6">
					<%= form_for [:admin, @genre] do |f| %>
						<div class="field row">
							<%= f.label "ジャンル" %>
							<%= f.text_field :genre_name %>
							<%= f.radio_button :genre_status, "有効" %>
							<%= f.label :genre_status, '有効'%>
							<%= f.radio_button :genre_status, "無効" %>
							<%= f.label :genre_status, '無効'%>
							<%= f.submit "変更を保存する" , class: "btn btn-primary" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</body>
</html>




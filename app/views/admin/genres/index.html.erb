<h1>ジャンル追加・一覧画面</h1>

<%= form_for [:admin, @genre] do |f| %>
	<div class="field row">
		<%= f.label "ジャンル" %>
		<%= f.text_field :genre_name %>
	</div>

	<label><%= f.radio_button :genre_status, "有効" %>有効</label>
	<label><%= f.radio_button :genre_status, "無効" %>無効</label>

	<%= f.submit "追加" %>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.genre_name %></td>
				<td><%= genre.genre_status %></td>
				<td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
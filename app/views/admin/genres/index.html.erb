<!DOCTYPE html>
<html>
	<head>
		<title>ながのcakeオレンジ</title>
	</head>
	<body>
		<div class="container">
			<div class="row genre-index">
				<h1>ジャンル追加・一覧画面</h1>
				<div class="col-xs-11">
					<%= form_for [:admin, @genre] do |f| %>
						<div class="field row">
							<%= f.label "ジャンル" %>
							<%= f.text_field :genre_name %>
							<%= f.radio_button :genre_status, "有効" %>
							<%= f.label :genre_status, '有効'%>
							<%= f.radio_button :genre_status, "無効" %>
							<%= f.label :genre_status, '無効'%>
							<%= f.submit "追加" , class: "btn btn-primary" %>
						</div>
					<% end %>
				</div>
				
				<div class="col-xs-4">
					<table class="table">
						<thead>
							<tr class="active">
								<th>ジャンル</th>
								<th>状態</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @genres.each do |genre| %>
								<tr>
									<td><%= genre.genre_name %></td>
									<td><%= genre.genre_status %></td>
									<td><%= link_to edit_admin_genre_path(genre.id) do %>
											<button class="btn btn-primary">編集する</button>
										<% end %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</body>
</html>



<!DOCTYPE html>
<html>
  <head>
    <title>ながのcakeオレンジ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <p class="navbar-text">LOGO</p>
   </nav>
<nav>
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
    <li><%= link_to "マイページ" ,public_user_path(current_user.id) %></li>
    <li><%= link_to "アバウト" ,public_user_path(current_user.id) %></li>
    <li><%= link_to "カート" ,public_user_path(current_user.id) %></li>
    <li><%= link_to "ログアウト" ,destroy_user_session_path, method: :delete %></li>

    <% else %>
    <li><%= link_to "アバウト" ,public_user_path(current_user.id) %></li>
    <li><%= link_to "商品一覧" ,public_user_path(current_user.id) %></li>
    <li><%= link_to "会員登録" ,public_user_path(current_user.id) %></li>
    <li><%= link_to "ログイン" ,destroy_user_session_path, method: :delete %></li>
     <% end %>
</ul>
</nav></div></header>

  <%= yield %>
  </body>
</html>

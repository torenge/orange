<!DOCTYPE html>
<html>
  <head>
    <title>ながのcakeオレンジ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <p class="navbar-text">LOGO</p>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "マイページ" ,public_user_path(current_user.id) %></li>
            <li><%= link_to "アバウト" ,public_user_path(current_user.id) %></li>
            <li><%= link_to "商品一覧" ,"/" %></li>
            <li><%= link_to "カート" ,public_carts_path %></li>
            <li><%= link_to "ログアウト" ,destroy_user_session_path, method: :delete %></li>

            <% else %>
            <li><%= link_to "アバウト" ,"/" %></li>
            <li><%= link_to "商品一覧" ,"/" %></li>
            <li><%= link_to "会員登録" ,new_user_registration_path %></li>
            <li><%= link_to "ログイン" ,new_user_session_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

        <%= yield %>
  </body>
</html>

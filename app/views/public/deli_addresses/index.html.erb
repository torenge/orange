
<strong>配送先登録/一覧</strong>


<%= form_for(@deli_addressesx, url:"/public/deli_addresses") do |f| %>
<table>


	<tr>
		<td>郵便番号</td>
		<td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </td>
	</tr>

    <tr>
		<td>住所</td>
		<td><%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </td>
	</tr>

	<tr>
		<td>宛名</td>
		<td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
	　　</td>
	</tr>

    </table>
    <%= f.submit '登録する' %>

<% end %>

<table>
　　　<thead>
	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
		<th></th>
	</tr>
</thead>

<% @deli_addresses.each do |deliaddress| %>
	<tr>
		<td><%= deliaddress.postal_code %></td>
		<td><%= deliaddress.address %></td>
		<td><%= deliaddress.fullname %></td>
		<td><botton class="btn-sm btn-success"><%= link_to "編集する", edit_public_deli_address_path(deliaddress.id) %></botton></td>
        <td><botton class="btn-sm btn-danger"><%= link_to "削除する", public_deli_address_path(deliaddress.id), method: :delete, data: {confirm: "本当に消しますか？"} %></botton></td>
    </tr>
    <% end %>
</table>

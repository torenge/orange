<body>
	<div class="body">
		<% if @deli_addresses.errors.any? %>
			<div class="alert alert-warning">
				<ul>
					<li>
						<%= pluralize(@deli_addresses.errors.count, "error") %>
						prohibited this obj from being saved:
					</li>
					<% @deli_addresses.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div class="container">
			<div class="row">
				<div class="col-xs-10 pbottom">
					<p>配送先編集</p>
					<%= form_for(@deli_addresses, url:"/public/deli_addresses/#{@deli_addresses.id}") do |f| %>
						<table border="1" class="tablev right">
							<tr height=60>
								<td class="col-xs-3 thead-light">郵便番号</td>
								<td class="col-xs-7">
									<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
								</td>
							</tr>
							<tr height=60>
								<td class="col-xs-3 thead-light">住所</td>
								<td class="col-xs-7">
									<%= f.text_field :address, :size=>"50",  autofocus: true, autocomplete: "address" %>
								</td>
							</tr>
							<tr height=60>
								<td class="col-xs-3 thead-light">宛名</td>
								<td class="col-xs-7">
									<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
									<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
								　　</td>
							</tr>
						</table>
						<div class="tablev">
							<%= f.submit '編集する',class: "btn btn-primary"  %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</body>
<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="body">
		<div class="container">
			<h1>ショッピングカート</h1>
			<%= link_to "カートを空にする", public_carts_path, method: :delete %>
			<div class="row">
				<div class="col-xs-10">
					<table>
						<thead>
							<tr>
								<th>商品名</th>
								<th>単価(税込)</th>
								<th>数量</th>
								<th>小計</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @user.carts.each do |cart| %>
								<tr>
									<td>
										<%= attachment_image_tag cart.product, :product_image, :fill, 100, 100,  format: 'jpeg', fallback: "no_image.jpg" %>
										<%= cart.product.product_name %>
									</td>
									<td><%= (cart.product.price.to_i * 1.1).round(0) %></td>
									<td>
										<%= form_for(cart, url: public_cart_path(cart.id)) do |f| %>
											<%= f.number_field :quantity %>
											<%= f.submit "変更" %>
										<% end %>
									</td>
									<td><%= cart.quantity.to_i * (cart.product.price.to_i * 1.1).round(0) %></td>
									<td><%= link_to '削除する', public_cart_path(cart.id), method: :delete %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
					<%= link_to "買い物を続ける", public_products_path %>
					<table>
						<tbody>
							<tr>
								<td>合計金額</td>
								<td>
									<%#<%= @total.inject{|sum, n| sum + n }%>
								</td>
							</tr>
						</tbody>
					</table>
					<%= form_for @order, url: "/public/carts" do |f| %>
						<%= f.submit "情報入力に進む" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
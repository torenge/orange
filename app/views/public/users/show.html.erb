<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="container">
		<div class="row" id="order-details">
			<div class="col-xs-8">
				<h4>マイページ</h4>
				<div class="row box0">
					<strong class="col-xs-2 text1">登録情報</strong>
					<span class="col-xs-2"><%= link_to "編集する", edit_public_user_path(@user),  class: "btn btn-primary" %></span>
					<span class="col-xs-2"><%= link_to "パスワードを変更する", edit_user_registration_path(@user),  class: "btn btn-primary" %></span>
				　　　  </div>
				<div class="row box">
					<table class= "tab" id="order-details">
						<tr>
							<td class="left-td">氏名</td>
							<td><%= @user.fullname %></td>
						</tr>
						<tr>
							<td class="left-td">カナ</td>
							<td><%= @user.kana_fullname %></td>
						</tr>
						<tr>
							<td class="left-td">郵便番号</td>
							<td><span>〒</span><%= @user.postal_code %></td>
						</tr>
						<tr>
							<td class="left-td">住所</td>
							<td><%= @user.address %></td>
						</tr>
						<tr>
							<td class="left-td">電話番号</td>
							<td><%= @user.tel_num %></td>
						</tr>
						<tr>
							<td class="left-td">メールアドレス</td>
							<td><%= @user.email %></td>
						</tr>
					</table>
				</div>
				<div class="row">

					<strong class="row col-xs-3">配送先</strong>
					<span class="row col-xs-3"><%= link_to "一覧を見る", public_deli_addresses_path,  class: "btn btn-primary" %></span>

				</div>
				<div class="row box1">

					<strong class="row col-xs-3">注文履歴</strong>
					<span class="row col-xs-3"><%= link_to "一覧を見る", public_orders_path,  class: "btn btn-primary" %></span>

				</div>
			</div>
		</div>
	</div>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="">
					<h4 class="text2">注文履歴一覧</h4>
					<table class="table-bordered col-xs-12 text-left id="order-details>

						<tr class="show_height">
							<td>注文日</td>
							<td>配送先</td>
							<td>注文商品</td>
							<td>支払金額</td>
							<td>ステータス</td>
							<td>注文詳細</td>
						</tr>

						<tbody>
							<% @orders.each do |order| %>
							<tr>
								<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
								<td>
									<p><%= order.postal_code %></p>
									<p><%= order.address %></p>
									<p><%= order.fullname %></p>
								</td>
								<td>
									<% order.order_products.each do |order_product| %>
										<%= order_product.product.product_name %><br>
									<% end %>
								</td>
								<td>
									<% @total = [] %>
									<% order.order_products.each do |order_product| %>

										<% @total << (order_product.total.to_i * 1.1).round(0) * order_product.quantity.to_i %>
									<% end %>
									<% if @total.count > 1 %>
										<%= @total.inject{|sum, n| sum + n } + order.postage.to_i %>
									<% else %>
										<% @totalone = @total.inject{|sum, n| sum + n }.to_i %>
										<%= @totalone + order.postage.to_i %>
									<% end %>
								</td>
								<td><%= order.status %></td>
								<td class="text-center">
									<%= link_to "表示する",public_order_path(order.id),class: "btn btn-primary" %>
								</td>
							</tr>
						<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
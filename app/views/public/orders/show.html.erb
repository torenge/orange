<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<h1>注文詳細</h1>
				<div class="col-xs-5">
					<h2>注文情報</h2>
					<table>
						<tbody>
							<tr>
								<th>注文日</th>
								<td><%= @order.created_at %></td>
							</tr>
							<tr>
								<th>配送先</th>
								<td>
									<%=  %>
									<%=  %>
									<%=  %>
								</td>
							</tr>
							<tr>
								<th>支払方法</th>
								<td></td>
							</tr>
							<tr>
								<th>ステータス</th>
								<td></td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="col-xs-3">
					<h2>請求情報</h2>
					<table>
						<tbody>
							<tr>
								<th>商品合計</th>
								<td></td>
							</tr>
							<tr>
								<th>配送料</th>
								<td>800</td>
							</tr>
							<tr>
								<th>ご請求額</th>
								<td><%= @order.pay_method %></td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="col-xs-7">
					<h2>注文情報</h2>
					<table>
						<thead>
							<tr>
								<th>商品</th>
								<th>単価(税込)</th>
								<th>個数</th>
								<th>小計</th>
							</tr>
						</thead>
						<tbody>
							<%= @order_products.each do |order_product| %>
							<tr>
								<td><%= @order_product.name %></td>
								<td><%= @order_product.total %></td>
								<td><%= @order_product.quantity %></td>
								<td><% (@order_product.total * @order_product.quantity) %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
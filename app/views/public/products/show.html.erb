<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="col-xs-2">
					<table>
						<tbody>
							<tr>
								<th>ジャンル検索</th>
								<% @genres.each do |genre| %>
									<td>
										<%= genre.genre_name %>
									</td>
								<% end %>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-8">
					<%= attachment_image_tag @product, :product_image_id, format: 'jpeg', fallback: "no_image.jpg" %>
					<%= @product.product_name %>
					<%= @product.introduction %>
					<%= @product.price.round(0) %>
					<%= form_for(@cart) do |f| %>
						<%= f.select :quantity, options_for_select(@cart, {selected: cart.quantity.to_i}) %>
					<%= f.submit "カートに入れる" %>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
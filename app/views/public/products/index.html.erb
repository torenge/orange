<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<div class="">
					<table>
						<thead>
							<tr>
								<th>ジャンル検索</th>
							</tr>
						</thead>
						<tbody>
							<% @genres.each do |genre| %>
							<tr>
								<td>
									<%= link_to public_products_genreshow_path(genre) do %>
										<%= genre.genre_name %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
			<div class="row">
				<div class="">
					<h1>商品一覧</h1>
					<p>全<%= @products.count %>件</p>
					<div class="">
						<% @product.each do |product| %>
						<div class="col-xs-1">
							<%= link_to public_product_path(product) do %>
								<%= attachment_image_tag product, :product_image, :fill, 100, 100,  format: 'jpeg', fallback: "no_image.jpg" %>
								<%= product.product_name %>
								¥<%= (product.price.to_i * 1.1).round(0)  %>
							<% end %>
						</div>
						<% end %>
						<%= paginate @product, class: "paginate" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
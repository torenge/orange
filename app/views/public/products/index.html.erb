<!DOCTYPE html>
<html>
<head>
	<title>ながのcakeオレンジ</title>
</head>
<body>
	<div class="body">
		<div class="container">
			<div class="col-xs-3">
				<div class="row">
					<table border="1" rules="groups">
						<thead>
							<tr>
								<th height=30 width=200>
									<center>ジャンル検索</center>
								</th>
							</tr>
						</thead>
						<tbody>
							<% @genres.each do |genre| %>
							<tr>
								<td height=60>
									<%= link_to public_product_genreshow_path(genre) do %>
										<%= genre.genre_name %>
									<% end %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
			<div class="col-xs-9">
				<div class="row">
					<h1>商品一覧</h1>
					<p>全<%= @products.count %>件</p>
					<div class="">
						<% @product.each do |product| %>
						<div class="col-xs-3">
							<%= link_to public_product_path(product) do %>
								<table class="tableb">
									<tr>
										<td>
											<%= attachment_image_tag product, :product_image, :fill, 200, 150,  format: 'jpeg', fallback: "no_image.jpg" %>
										</td>
									</tr>
									<tr>
										<td height=30>
											<%= product.product_name %>
										</td>
									</tr>
									<tr>
										<td height=30>
											<%= number_to_currency(product.price.to_i * 1.1, :unit => "¥", :precision => 0) %>
										</td>
									</tr>
								</table>
							<% end %>
						</div>
						<% end %>
						<%= paginate @product, class: "pagenate" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>